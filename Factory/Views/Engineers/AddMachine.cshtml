@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h2>Add a machine</h2>
<hr><br>

<h4>Add a machine that this engineer is licensed to repair: @Html.DisplayFor(model => model.EngineerName)</h4>
<br>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select Machine: ")<br>
    @Html.DropDownList("MachineId")<br>
    <br>
    <input type="submit" value="Save" class="btn btn-primary"/>
}
<hr><br>
<p>@Html.ActionLink("Back to engineers", "Index")</p>