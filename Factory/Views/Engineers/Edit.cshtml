@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h2>Edit Engineer</h2>
<hr><br>

<h4>Edits for @Html.DisplayFor(model => model.EngineerName)</h4>

<p>@Html.ValidationMessageFor(model => model.EngineerName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  
  <div class="mb-3">
    @Html.LabelFor(model => model.EngineerName, "Engineer Name: ", new { @class="form-label"})
  </div>
  <div class="mb-3">
    @Html.TextBoxFor(model => model.EngineerName, new { @class="form-control"})
  </div>

  <input type="submit" value="Save" class="btn btn-primary" />
}
<hr><br>
<p>@Html.ActionLink("Show all engineers", "Index")</p>