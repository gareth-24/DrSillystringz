@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<h2>Edit Machine</h2>
<hr><br>

<h4>Edits for @Html.DisplayFor(model => model.MachineName)</h4>

<p>@Html.ValidationMessageFor(model => model.MachineName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  <div class="mb-3">
    @Html.LabelFor(model => model.MachineName, "Machine Name: ", new { @class="form-label"})
    @Html.TextBoxFor(model => model.MachineName, new { @class="form-control"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.Description, "Description: ", new { @class="form-label"})
    @Html.TextBoxFor(model => model.Description, new { @class="form-control"})
  </div>

  <input type="submit" value="Save" class="btn btn-primary" />
}
<hr><br>
<p>@Html.ActionLink("Show all machines", "Index")</p>