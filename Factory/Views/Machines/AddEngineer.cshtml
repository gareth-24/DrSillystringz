@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<h2>Add an engineer</h2>
<hr><br>

<h4>Mark an engineer as licensed to repair this machine: @Html.DisplayFor(model => model.MachineName)</h4>
<br>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select Engineer: ")<br>
    @Html.DropDownList("EngineerId")<br>
    <br>
    <input type="submit" value="Save" class="btn btn-primary"/>
}
<hr><br>
<p>@Html.ActionLink("Back to machines", "Index")</p>