@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<h2>Add an engineer</h2>
<hr><br>

<h4>Mark an engineer as licensed to repair this machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select Engineer: ")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" class="btn btn-primary"/>
}

<p>@Html.ActionLink("Back to machines", "Index")</p>